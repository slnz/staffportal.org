<%%= semantic_form_for @<%= singular_name %>, builder: FormtasticBootstrap::FormBuilder do |f| %>
  <%%= f.inputs do %>
  <%- attributes.each do |attribute| -%>
    <%%= f.input :<%= attribute.name %> %>
  <%- end -%>
  <%% end %>

  <%%= f.actions do %>
    <%%= f.action :submit, :as => :input %>
  <%% end %>
<%% end %>
